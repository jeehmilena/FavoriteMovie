<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jessica.yourfavoritemovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_movie"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_movie_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YourFavoriteMovies">
        <activity android:name=".authentication.view.RegisterActivity"
            android:label="@string/title_activity_register"/>
        <activity
            android:name=".home.view.HomeActivity"
            android:label="@string/title_activity_movies" />
        <activity android:name=".favorites.view.FavoritesActivity" />
        <activity android:name=".authentication.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/movie" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
    </application>

</manifest>