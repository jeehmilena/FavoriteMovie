<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jessica.yourfavoritemovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_movie"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_movie_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.YourFavoriteMovies"
        tools:targetApi="m">
        <activity android:name=".authentication.view.RegisterActivity"
            android:label="@string/title_activity_register"/>
        <activity
            android:name=".home.view.HomeActivity"
            android:label="@string/title_activity_movies" />
        <activity android:name=".favorites.view.FavoritesActivity"
            android:label="@string/title_activity_favorites"/>
        <activity android:name=".authentication.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>